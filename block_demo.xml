<?xml version="1.0" ?>
<mujoco>
    <option timestep="0.005" />
    <!--option gravity="0 0 -10"/-->
    <worldbody>
        <body name="box" pos="0 0 8">
            <geom mass ="1" size="1 1 1" type="box"/>
            <joint name='box_z' type='slide' axis='0 0 1' limited='false' damping='.01'/>
	    <joint name='box_y' type='slide' axis='0 1 0' limited='false' damping='.01'/>
	    <joint name='box_x' type='slide' axis='1 0 0' limited='false' damping='.01'/>
        </body>
        
        <body name="floor" pos="0 0 0.025">
            <!--solref="-stiffness -damping" is what gives the floor a bouncy property. Both of these 
            quantites can be tweaked but must remain negative or 0 for the program to run properly-->
            <geom condim="3" size="5.0 5.0 5" rgba="0 1 0 1" type="box" solref="-10 -10"/>
        </body>
    </worldbody>
</mujoco>


